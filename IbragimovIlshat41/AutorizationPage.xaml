<Page x:Class="IbragimovIlshat41.AutorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IbragimovIlshat41"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AutorizationPage" FontFamily="Comic Sans MS">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Vertical">
            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                <TextBlock Text="Логин" FontSize="20" Margin="100 0 100 10"></TextBlock>
                <TextBox Name="TBoxLogin" Height="20" Width="200" Text="loginDEftn2018"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Пароль"  FontSize="20" Margin="100 0 88 10"></TextBlock>
                <TextBox Name="TBoxPassword" Height="20" Width="200" Text="gPq+a}"></TextBox>
            </StackPanel>
              <StackPanel Orientation="Horizontal" Margin="150 25 0 0" VerticalAlignment="Center">
                <TextBlock Name="capchaOneWord" FontSize="22" Margin="30,0,0,0"></TextBlock>
                <TextBlock Name="capchaTwoWord" FontSize="22" TextDecorations="Strikethrough" Margin="0,5,0,0"></TextBlock>
                <TextBlock Name="capchaThreeWord" FontSize="22" TextDecorations="Strikethrough"></TextBlock>
                <TextBlock Name="capchaFourWord" FontSize="22" TextDecorations="Strikethrough" Margin="0,10,0,0"></TextBlock>
                <TextBox Name="TBoxCapcha" Margin="25 0 0 0" FontSize="22" Height="30" Width="65"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 50 0 0">
                <Button Content="Войти как Гость" Name="NoLoginBtn" Click="NoLoginBtn_Click"  Margin="5 5 100 5"></Button>
                <Button Content="Войти" Name="LoginBtn" Click="LoginBtn_Click"  Margin="100 5 5 5"></Button>
            </StackPanel>
        </StackPanel>

    </Grid>
</Page>
