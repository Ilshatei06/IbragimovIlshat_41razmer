<Page x:Class="IbragimovIlshat41.AutorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IbragimovIlshat41"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AutorizationPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Логин:" Margin="1"></TextBlock>
                <TextBox Name="TBoxLogin" Height="20" Width="200" Margin="10 0 0 5"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Пароль:"></TextBlock>
                <TextBox Name="TBoxPassword" Height="20" Width="200" Margin="3 0 0 5"></TextBox>
            </StackPanel>
            <Button Content="Войти" Name="BtnAutorizatioEntrance" Click="BtnAutorizatioEntrance_Click"  Margin="5"></Button>
            <Button Content="Войти как Гость" Name="BtnNoAutorizatioEntrance" Click="BtnNoAutorizatioEntrance_Click"  Margin="15"></Button>
        </StackPanel>

    </Grid>
</Page>
